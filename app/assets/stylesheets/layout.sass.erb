.hidden
  display: none

.shown
  display: normal
  
.clear
  clear: both
  
input.field
  padding: .3em
  border: 1px solid #DFDFDF
  font-size: 1em
  font-family: Georgia
  color: #48453C

#page_wrapper
  float: left
  width: 100%
  
  #page
    text-align: left
    width: 50em
    margin-left: auto
    margin-right: auto
    
#header_wrapper, #main_wrapper, #footer_wrapper
  width: 100%
  float: left
  
#header_wrapper
  padding-bottom: 10px
  padding-left: 1em
  margin-top: 25px
  background: url(<%= asset_path 'hr_horizontal.png' %>) bottom left repeat-x
  
#header h1 > a
  float: left
  font-family: Georgia
  font-size: 3em
  font-weight: normal
  letter-spacing: .1em
  color: #48453C
  text-decoration: none
  
#navigation ul
  float: right
  list-style: none
  padding-top: 1.8em
  padding-right: 10px
  
#navigation li
  float: left
  margin-left: 3em
  letter-spacing: .1em

#navigation a
  font-family: "Lucida Grande",Verdana,Geneva,Arial,Helvetica,sans-serif 
  font-size: .75em
  color: #B3A485
  text-decoration: none
  
#main
  padding-top: 4em
  padding-left: 1em
  float: left
  
  h2
    font-family: Georgia
    font-size: 1.8em
    font-weight: normal
    letter-spacing: .1em
    color: #48453C
    
#content_wrapper
  padding-top: 3em
  padding-left: 2em
  float: left
    
#footer_wrapper
  width: 100%
  font-family: "Lucida Grande",Verdana,Geneva,Arial,Helvetica,sans-serif 
  font-size: .7em
  margin-top: 4em
  margin-bottom: 1em
  padding-top: 2em
  padding-left: 1em
  background: url(<%= asset_path 'hr_horizontal.png' %>) top left repeat-x
  
#footer_links
  width: 26em
  margin-right: auto
  margin-left: auto
  ul
    list-style: none
  li
    float: left
    margin-left: 5em
  a
    color: #B3A485
    text-decoration: none
    
#footer p
  padding-top: 1em
  clear: left
  color: #999
  width: 100%
  text-align: center
  
#message_wrapper
  margin-top: 3em
  margin-bottom: 1em
  font-family: "Lucida Grande",Verdana,Geneva,Arial,Helvetica,sans-serif 
  font-size: .9em
  letter-spacing: .1em
  line-height: 1.4em
  
  .notice, .error
    margin-left: 2em
    padding-left: 2em
    
  .notice
    color: #6BC65F
    background: url(<%= asset_path 'flag_instructions.png' %>) top left no-repeat
    a
      color: #B3A485
      text-decoration: none
      font-weight: bold
  
  .error
    color: #CC3333
    background: url(<%= asset_path 'flag_error.png' %>) top left no-repeat
    a
      color: #B3A485
      text-decoration: none
      font-weight: bold
    